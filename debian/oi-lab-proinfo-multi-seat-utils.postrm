#!/bin/sh
set -e

remove() {
    loginctl flush-devices
    udevadm trigger
}

purge() {
    remove
}

case "$1" in
    remove)
        remove || true
        ;;

    purge)
        purge || true
        ;;

    upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
esac
